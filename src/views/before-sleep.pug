    script.
      //- var xValues = ["Italy", "France", "Spain", "USA", "Argentina"];
      const yNegativeValues = [#{locals.averageMoods.anxious}, #{locals.averageMoods.sad}, #{locals.averageMoods.noisy}, #{locals.averageMoods.cold}, #{locals.averageMoods.agitated}, #{locals.averageMoods.uneasy},#{locals.averageMoods.worried}, #{locals.averageMoods.overwhelmed}];
