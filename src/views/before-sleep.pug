      const barColors = [
      "#61A5F4",
      "#2A9D8F",
      "#F4A261",
      "#E9C46A",
      "#8B5CF6",
      "#ADD8E6",
      "#F08080",
      "#F46196",
      "#0b1426",
      "#6cb259",
      ];
      new Chart("negativeChart", {
      type: "doughnut",
      data: {
      datasets: [{
      backgroundColor: barColors,
      data: yNegativeValues,
      borderWidth: 4,
      }]
      },
      options: {
      devicePixelRatio: 7,
      cutoutPercentage: 60,
      animation: false,
      }
      });
      new Chart("positiveChart", {
      type: "doughnut",
      data: {
      datasets: [{
      backgroundColor: barColors,
      data: yPositiveValues,
      borderWidth: 4,
      }]
      },
      options: {
      devicePixelRatio: 7,
      cutoutPercentage: 60,
      animation: false,
      }
      });
